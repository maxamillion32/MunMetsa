<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingLeft="1dp"
    android:paddingRight="5dp"
    android:onClick="receiptClicked">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/showImage"
        android:src="@drawable/receipt"
        android:layout_margin="5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:text="Selite: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nlaa tafasdasd af fsddgd laa tafasdasd "
        android:id="@+id/receiptTextView"
        android:textSize="20sp"
        />
        </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Brutto: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
        <TextView
            android:text="55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/receiptPriceTextView"
            android:layout_weight="1"
            android:textSize="20sp" />
        <TextView
            android:text="€ "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp" />
    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Netto: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
            <TextView
                android:text="55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/receiptNetTextView"
                android:layout_weight="1"
                android:textSize="20sp" />
            <TextView
                android:text="€ "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="ALV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
            <TextView
                android:text="24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/receiptTaxTextView"
                android:layout_weight="1"
                android:textSize="16sp" />
            <TextView
                android:text="%: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp" />
            <TextView
                android:text="45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/receiptTaxAmountTextView"
                android:textSize="20sp" />
            <TextView
                android:text="€"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp" />
        </LinearLayout>


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12.22.2016"
        android:id="@+id/receiptDateTextView"
        android:layout_marginLeft="10dp"
        android:textStyle="italic"
        android:layout_weight="0.06"
        android:gravity="right"
        android:layout_gravity="right" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:id="@+id/receiptId"
            android:gravity="right"
            android:layout_gravity="right"
            android:visibility="gone" />



    </LinearLayout>


</LinearLayout>